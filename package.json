{
  "private": true,
  "name": "ostapoff-cra-templates",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "lerna run test --stream",
    "publish:ci": "lerna publish --yes --conventional-commits --no-push --no-git-tag-version --message 'chore: release new versions' --registry=https://registry.npmjs.org/:_authToken=$NPM_TOKEN",
    "publish": "lerna publish from-package -y --no-verify-access",
    "publish:all": "lerna publish",
    "format": "prettier --check ./packages/**/*.{ts,tsx}",
    "format:fix": "prettier ./packages/** --write",
    "lint": "eslint ./packages/**/*.{ts,tsx} --max-warnings=0",
    "lint:fix": "eslint ./packages/**/*.{ts,tsx} --fix --max-warnings=0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.10.3",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "lerna": "^3.22.1",
    "prettier": "^2.1.1"
  }
}
